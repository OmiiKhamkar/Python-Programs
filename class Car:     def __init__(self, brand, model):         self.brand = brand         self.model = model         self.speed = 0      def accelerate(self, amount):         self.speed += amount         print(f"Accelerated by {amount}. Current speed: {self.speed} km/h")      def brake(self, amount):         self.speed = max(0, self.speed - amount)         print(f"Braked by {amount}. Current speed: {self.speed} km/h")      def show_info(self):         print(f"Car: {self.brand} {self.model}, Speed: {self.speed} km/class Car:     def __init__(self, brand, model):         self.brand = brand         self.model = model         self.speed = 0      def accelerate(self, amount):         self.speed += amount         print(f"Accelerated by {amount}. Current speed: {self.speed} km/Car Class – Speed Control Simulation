class Car:
    def __init__(self, brand, model)
        self.brand = brand
        self.model = model
        self.speed = 0

    def accelerate(self, amount):
        self.speed += amount
        print(f"Accelerated by {amount}. Current speed: {self.speed} km/h")

    def brake(self, amount):
        self.speed = max(0, self.speed - amount)
        print(f"Braked by {amount}. Current speed: {self.speed} km/h")

    def show_info(self):
        print(f"Car: {self.brand} {self.model}, Speed: {self.speed} km/h")


# Creating object and testing
c1 = Car("Tesla", "Model 3")
c1.accelerate(30)
c1.brake(10)
c1.show_info()
