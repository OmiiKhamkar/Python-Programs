def calculate_salary(basic):
    hra = basic * 0.20
    da = basic * 0.10
    pf = basic * 0.08
    net = basic + hra + da - pf
    return hra, da, pf, net

name = input("Enter employee name: ")
basic = float(input("Enter basic salary: "))

hra, da, pf, net = calculate_salary(basic)

print("\n--- Salary Slip ---")
print("Name:", name)
print("Basic Salary:", basic)
print("HRA:", hra)
print("DA:", da)
print("PF Deduction:", pf)
print("Net Salary:", net)
